# ULD Forecasting System - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# External APIs
# =============================================================================

# AviationStack - Flight data API (https://aviationstack.com/signup/free)
AVIATIONSTACK_API_KEY=your_api_key_here

# =============================================================================
# Database
# =============================================================================

# SQLite (default - no config needed)
# DATABASE_URL=sqlite+aiosqlite:///./uld_forecasting.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/uld_forecasting

# =============================================================================
# Application
# =============================================================================

# API server port
PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
